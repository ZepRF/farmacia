unit uServicoControler;

interface
uses
  uServicoModel;
type

  TServicoControler = class
  private
  public
    function salvar(model:TServicoModel):boolean;
  end;

implementation

{ TServicoControler }

uses uServicoDao, System.SysUtils, System.Generics.Collections;

function TServicoControler.salvar(model: TServicoModel): boolean;
var
  servicoDao:TServicoDao;
begin

  servicoDao := TServicoDao.Create;
  try
    if not servicoDao.salvar(model) then
      raise Exception.Create('Não foi possível concluir esta operação');
  finally
    servicoDao.Free;
  end;

end;

end.
